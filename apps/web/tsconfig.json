{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@os/*": [
				"os/*"
			],
			"@ui/*": [
				"ui/*"
			],
			"@apps/*": [
				"apps/*"
			],
			"@utils/*": [
				"utils/*"
			],
			"@common/*": [
				"common/*"
			],
			"@typings/*": [
				"../../typings/*"
			],
			"@styles/*": [
				"styles/*"
			],
			"@config/*": [
				"config/*"
			],
			"@debug/*": [
				"debug/*"
			]
		},
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"exclude": [
		"./node_modules/**/*",
		"./dist/**/*"
	]
}
